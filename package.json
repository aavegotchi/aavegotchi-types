{
  "name": "@aavegotchi/sdk",
  "version": "1.0.0-5a",
  "description": "an awesome aavegotchi library with Typescript support!",
  "main": "dist/src/index.js",
  "types": [
    "dist/gen/gen.d.ts",
    "dist/src/index.d.ts",
    "dist/typechain/*.d.ts"
  ],
  "scripts": {
    "test": "ts-mocha test/test.ts",
    "update-facets": "rm -rf typechain && git submodule foreach git pull origin master && yarn hardhat clean && yarn hardhat compile && bash scripts/clean.sh",
    "update-graphql": "rm -rf dist gen && yarn graphql-codegen && tsc -P .",
    "bundle": "yarn update-facets && yarn update-graphql && yarn pack",
    "release": "yarn bundle && yarn publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aavegotchi/aavegotchi-sdk.git"
  },
  "author": "Pixelcraft Studios",
  "license": "TBD",
  "dependencies": {
    "ethers": "^5.4.1",
    "graphql": "^15.5.1",
    "graphql-request": "^3.4.0",
    "graphql-tag": "^2.12.5"
  },
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@ethersproject/abi": "^5.4.0",
    "@ethersproject/bytes": "^5.4.0",
    "@ethersproject/providers": "^5.4.1",
    "@graphql-codegen/cli": "^1.21.7",
    "@graphql-codegen/graphql-modules-preset": "^1.2.10",
    "@graphql-codegen/typescript": "^1.23.0",
    "@graphql-codegen/typescript-generic-sdk": "^1.17.15",
    "@graphql-codegen/typescript-graphql-request": "^3.2.5",
    "@graphql-codegen/typescript-operations": "^1.18.4",
    "@graphql-codegen/typescript-react-query": "^1.3.5",
    "@graphql-codegen/typescript-resolvers": "^1.20.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.2.0",
    "@types/expect": "^24.3.0",
    "@types/graphql": "^14.5.0",
    "@types/mocha": "^8.2.3",
    "@types/require-dir": "^1.0.2",
    "chai": "^4.3.4",
    "hardhat": "^2.5.0",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-typechain": "^0.3.5",
    "ts-generator": "^0.1.1",
    "ts-mocha": "^8.0.0",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "^4.3.5"
  },
  "homepage": "https://github.com/aavegotchi/aavegotchi-sdk",
  "bugs": {
    "url": "https://github.com/aavegotchi/aavegotchi-sdk/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
