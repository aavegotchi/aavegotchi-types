{
  "name": "@aavegotchi/sdk",
  "version": "1.0.0-2a",
  "description": "an awesome aavegotchi library for Node.js with Typescript support!",
  "main": "dist/src/index.js",
  "types": [
    "dist/gen/gen.d.ts",
    "dist/src/index.d.ts"
  ],
  "scripts": {
    "test": "ts-mocha test/test.ts",
    "update-facets": "git submodule foreach git pull origin master && yarn hardhat compile",
    "bundle": "rm -rf dist gen && yarn graphql-codegen && tsc -P .",
    "release": "yarn update-facets && yarn bundle && yarn publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aavegotchi/aavegotchi-sdk.git"
  },
  "author": "Pixelcraft Studios",
  "license": "TBD",
  "dependencies": {
    "ethers": "^5.3.0",
    "graphql": "^15.5.0",
    "graphql-request": "^3.4.0",
    "graphql-tag": "^2.12.4",
    "require-dir": "^1.2.0"
  },
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.5",
    "@graphql-codegen/graphql-modules-preset": "^1.2.6",
    "@graphql-codegen/typescript": "^1.22.1",
    "@graphql-codegen/typescript-generic-sdk": "^1.17.11",
    "@graphql-codegen/typescript-graphql-request": "^3.2.1",
    "@graphql-codegen/typescript-operations": "^1.18.0",
    "@graphql-codegen/typescript-react-query": "^1.3.1",
    "@graphql-codegen/typescript-resolvers": "^1.19.2",
    "@types/expect": "^24.3.0",
    "@types/graphql": "^14.5.0",
    "@types/mocha": "^8.2.2",
    "@types/require-dir": "^1.0.1",
    "chai": "^4.3.4",
    "hardhat": "^2.3.0",
    "hardhat-abi-exporter": "^2.2.1",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.3.2"
  },
  "homepage": "https://github.com/aavegotchi/aavegotchi-sdk",
  "bugs": {
    "url": "https://github.com/aavegotchi/aavegotchi-sdk/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
